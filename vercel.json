{
  "bunVersion": "1.1.20",
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/bun" }
  ],
  "functions": {
    "api/**/*": {
      "runtime": "bun@1.1.20",
      "includeFiles": "loan.db"
    }
  },
  "installCommand": "bun install",
  "buildCommand": "bun run build || true",
  "devCommand": "bun run dev",
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index" }
  ]
}
