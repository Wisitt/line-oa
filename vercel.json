{
  "version": 2,
  "builds": [
    { "src": "api/index.ts", "use": "@vercel/node@3.1.4" }
  ],
  "functions": {
    "api/index.ts": {
      "runtime": "nodejs20.x",
      "includeFiles": "loan.db"
    }
  },
  "routes": [
    { "src": "/(.*)", "dest": "/api/index.ts" }
  ],
  "installCommand": "npm install",
  "buildCommand": "npm run build --if-present"
}
